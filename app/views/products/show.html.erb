<img src="<%= @product.img_url %>", class="p-show-img" >

<div class="p-show-specifi">
	<h3><%= @product.title %></h3> <br> <br>


  <% sizes_list = [] %>
  <% selector = [] %>
  <%if @product.xs > 0 %>
    <%selector = ["Talla Xs",@product.xs.to_s]%>
    <% sizes_list.push(selector) %>
  <%end%>
  <%if @product.s > 0 %>
    <%selector = ["Talla S",@product.s.to_s ]%>
    <% sizes_list.push(selector) %>
  <%end%>
  <%if @product.m > 0 %>
    <%selector = ["Talla M",@product.m.to_s]%>
    <% sizes_list.push(selector) %>
  <%end%>
  <%if @product.l > 0 %>
    <%selector = ["Talla L",@product.l.to_s]%>
    <% sizes_list.push(selector) %>
  <%end%>
  <%if @product.xl > 0 %>
    <%selector = ["Talla XL",@product.xl.to_s]%>
    <% sizes_list.push(selector) %>
  <%end%>
  <%if @product.xxl > 0 %>
    <%selector = ["Talla XXL",@product.xxl.to_s]%>
    <% sizes_list.push(selector) %>
  <%end%>

<%= sizes_list%>



	<%= form_for(@order_item, remote: true) do |f| %>
    <% if @order_item.errors.any? %>
      <% @order_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>

		<%= f.hidden_field :product_id, value: @product.id %>
		<h5>Precio: $<%= @product.price %></h5> <br>
    <div class="form-group">
			<h5>Tallas form for: <%= f.select(:size, options_for_select(sizes_list), {}, class: 'size-selector') %> <br> <br>
    </div>
		<div class="form-group">
			<h5>Cantidad: <%= f.number_field :quantity, value: 1, min: 1, class: 'amount', autocomplete: "off" %></h5>
		</div>
		<%= f.submit "Agregar al carrito", class: 'btn btn-primary btn-sm' %>
	<% end %>

</div>
<script>
  new SizeQuantity();
</script>
