<div class="product-page">
  <% if @products.length > 0 %>
    <h1><%=@products.first.category.title%> </h1>

    <div class="products">
      <% @products.each do |product| %>
        <div class="product-container">
          <%=link_to [product.category, product] do%>
            <img src="<%=product.img_url%>" >
            <h5><%=product.title%></h5>
            <h6>$<%= number_with_delimiter(product.price, :delimiter => '.') %></h6>
          <%end%>
        </div>
      <%end%>
    </div>
  <%else%>
    <h2 id="no-products">No hay productos registrados</h2>
  <% end%>
</div>

<script>
  new DeleteActiveClass();
  new DeleteActiveLinkClass();
</script>
