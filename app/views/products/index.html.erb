<div class="product-page">
  <h1><%=@products.first.category.title%> </h1>

  <div class="products">
    <%=@products.length%>
    <% @products.each do |product| %>
      <div class="product-container">
        <%=link_to [product.category, product] do%>
          <h5><%=product.title%></h5>
          <!-- <%=product.description%>
          <%=product.price%> -->
          <img src="<%=product.img_url%>" >
        <%end%>
      </div>
    <%end%>
  </div>
</div>
