<h1>Acá están todos mis productos</h1>
<%=link_to "Agregar producto", choose_path%>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Imagen</th>
      <th scope="col">Sub categoría</th>
      <th scope="col">Nombre</th>
      <th scope="col">Cantidad disponible</th>
      <th scope="col">Editar</th>
      <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product|%>
      <tr>
        <th>
          <%=link_to [product.sub_category.category, product.sub_category, product] do%>
            <img src="<%=product.img_url%>" class="mini-img">
          <%end%>

        </th>
        <td><%=product.sub_category.title%></td>
        <td><%=product.title%></td>
        <td><%=produ = product.q1 + product.q2 + product.q3 + product.q4 + product.q5 + product.q6 + product.q7 + product.q8 + product.q9 + product.q10%></td>
        <td>
          <%=link_to edit_category_sub_category_product_path(product.sub_category.category, product.sub_category, product) do%>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <%end%>
        </td>
        <td>
          <%=link_to [product.sub_category.category, product.sub_category, product], method: :delete, data:{ confirm: "¿Está seguro de eliminar este producto?"} do%>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <%end%>

        </td>
      </tr>
    <%end%>
  </tbody>
</table>
