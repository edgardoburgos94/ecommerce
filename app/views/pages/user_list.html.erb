
<h1>Usuarios registrados (<%=@users.length%>)</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Eliminar usuario</th>
      <th scope="col">current_sign_in_at</th>
      <th scope="col">last_sign_in_at</th>
      <th scope="col">last_created_at</th>
      <th scope="col">updated_at</th>
      <th scope="col">sign_in_count</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td><%=user.email%></td>
        <td><%= link_to admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } do%>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <%end%>
        </td>
        <td><%=user.current_sign_in_at%></td>
        <td><%=user.last_sign_in_at%></td>
        <td><%=user.created_at%></td>
        <td><%=user.updated_at%></td>
        <td><%=user.sign_in_count%></td>
      </tr>
    <%end%>
  </tbody>
</table>
