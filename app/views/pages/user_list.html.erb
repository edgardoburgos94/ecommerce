
<h1>Usuarios registrados (<%=@users.length%>)</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Email</th>
      <th scope="col"># de productos comprados</th>
      <th scope="col">Fecha de registro</th>
      <th scope="col">Ãšltimo ingreso</th>
      <th scope="col"># de visitas</th>
      <th scope="col">Detalles usuario</th>
      <th scope="col">Eliminar usuario</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td><%=user.full_name%></td>
        <td><%=user.email%></td>
        <td><%=user.purchases%></td>
        <td><%=user.created_at%></td>
        <td><%=user.updated_at%></td>
        <td><%=user.sign_in_count%></td>
        <td><%=link_to user_path(user) do%>
          <i class="fa fa-info-circle" aria-hidden="true"></i>
        <%end%>
        <td><%= link_to admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } do%>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <%end%>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
