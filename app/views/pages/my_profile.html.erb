<% if user_signed_in? %>
  <%= link_to "Editar pefil usuario", edit_user_registration_path %>
  <div class="supplier-details">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Nombre:</th>
        <td><%=@user.full_name%></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="col">Email:</th>
        <td><%=@user.email%></td>
      </tr>
      <tr>
        <th scope="col">Celular:</th>
        <td><%=@user.cel%></td>
      </tr>
      <tr>
        <th scope="col">Dirección:</th>
        <td><%=@user.dir%></td>
      </tr>
      <tr>
        <th scope="col">Pais:</th>
        <td><%=@user.country%></td>
      </tr>
      <tr>
        <th scope="col">Ciudad:</th>
        <td><%=@user.city%></td>
      </tr>
      <tr>
        <th scope="col">Número de productos comprados:</th>
        <td><%=@user.purchases%></td>
      </tr>


    </tbody>
  </table>
</div>
<%end%>
