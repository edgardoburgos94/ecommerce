<div class="franja"></div>

<div class="te-ofrecemos">
  <img src="https://drive.google.com/uc?export=view&id=1dxrgm5ga4RacM9aE5RBALxCncSqTa16N">
</div>

<div class="publicity">
  <%if @products_with_promotion.length >=3%>
    <div class="publicity-title">
      <h4>Descuento del día</h4>
    </div>

    <div class="products-publicity">
      <%random_n = (0..@products_with_promotion.length-1).to_a.shuffle%>
      <%3.times do |i|%>
          <%=link_to [@products_with_promotion[random_n[i]].category, @products_with_promotion[random_n[i]]] do%>
            <img src="<%=@products_with_promotion[random_n[i]].img_url%>" class="adjust-product-img">
            <div class="publicity-description">Precios especiales <br> <span class="color-naranja">Descuento del <%=@products_with_promotion[random_n[i]].supplier.p_dia + @products_with_promotion[random_n[i]].supplier.p_ure%>%</span></div>
          <%end%>
      <%end%>
    </div>
  <%end%>

  <%if @all_products.length >=3%>
    <div class="publicity-title">
      <h4>Recomendado para ti</h4>
    </div>

    <div class="products-publicity">
      <%random_n = (0..@all_products.length-1).to_a.shuffle%>
      <%3.times do |i|%>
        <%=link_to [@all_products[random_n[i]].category, @all_products[random_n[i]]] do%>
          <img src="<%=@all_products[random_n[i]].img_url%>" class="adjust-product-img">
          <div class="publicity-description">Precios especiales <br> <span class="color-naranja"><%=@all_products[random_n[i]].supplier.full_name%></span></div>
        <%end%>
      <%end%>
    </div>
  <%end%>
</div>

<div class="medios-pago">
  <h4>Multiples medios de pago</h4>
  <img src="https://drive.google.com/uc?export=view&id=1UNGAyB5R0O9lQqnEXzE8lgzfMp0VhP-r">
</div>

<div class="category-page">
  <%if user_signed_in?%>
  <h1>¡Bienvenido <%=current_user.full_name%>!</h1>
  <%end%>
  <h2>Escoge una categoría</h2>

  <%= form_tag categories_path, method: :get, class:"cate-search" do %>
    <div class="form-group">
      <%= text_field_tag :concept, params[:concept], class: "form-control", placeholder: "Buscar categoría" %>
    </div>
  <% end %>

  <div class="categories">
    <% @categories.each do |category| %>
      <div class="category-container">
        <%=link_to category_products_path(category) do%>
          <img src= "<%= category.img_url %>">
          <h5 class= "category-title"><%= category.title %></h5>
        <%end%>
      </div>
    <%end%>
  </div>

  </div>
</div>

<footer>
  <a href="#">Terminos y condiciones</a>
  <a href="#">Politicas de privacidad</a>
  <%= link_to "Contáctanos", contact_path%>
</footer>
