<% if !@order_item.nil? && @order_item.errors.any? %>
	<ul>
		<% @order_item.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<% if @order_items.size>0 %>
	<% @order_items.each do |item| %>
		<div class="well">
			<div class="row">
				<div class="col-sm-8">
					<h3><%= item.product.title %></h3>
					<img src="<%= item.product.img_url %>", class= "shopping-img">
				</div>
				<div class="col-sm-4">
					<div class="pull-right">
					<%= form_for(item, remote: true) do |f| %>
						<%= f.hidden_field :product_id, value: item.product.id %>
						<h5>Precio unitario: $<%= item.product.price %></h5>
						<%if user_signed_in?%>
						<h6>Descuento por:</h6>
						<h6>Usuario registrado: -$<%= item.product.price * item.product.category.supplier.p_ure/100 %></h6>
						<%if item.quantity >= item.product.category.supplier.cant_may%>
							<h6>Usuario mayorista: -$<%= item.product.price * item.product.category.supplier.p_cmay/100 %></h6>
						<%end%>
						<%if current_user.sign_in_count > 50%>
						<h6>Usuario recurrente: -$<%= item.product.price * item.product.category.supplier.p_cmin/100 %></h6>
						<%end%>
						<%if item.product.category.supplier.p_dia/100 > 0%>
						<h6>Promoción especial proveedor: -$<%= item.product.price * item.product.category.supplier.p_dia/100 %></h6>
						<%end%>
						<%end%>
						<div class="form-group">
							<%= f.text_field :quantity, value: item.quantity.to_i, min: 1, class: 'form-control' %>
						</div>
						<div class="btn-group">
							<%= f.submit "Editar cantidad", class: 'btn btn-primary' %>
							<%= link_to "Eliminar", item, method: :delete, remote: true, data: { confirm: '¿Estás seguro de eliminar este producto?' }, class: 'btn btn-danger' %>
						</div> <br>
						<h5>Precio total por producto: <%= item.total_price %></h5>
					<% end %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
	<h2>Valor total de la compra: <%=current_order.subtotal%></h2>
	<button class="show-btn">Comprar</button>

	<script>
	  new ProductsView();
	</script>
<% else %>
	<h1>No products in cart</h1>
<% end %>
